def reverse_number():
    a = int(input("Enter the number: "))
    rev = 0
    while a > 0:
        digit = a % 10
        rev = rev * 10 + digit
        a = a // 10
    print("Reversed number:", rev)
reverse_number()

or


#convert into a string
def reverse_number():
    a=input("enter the number:")
    rev=a[::-1]
    print(rev)

reverse_number()
